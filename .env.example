### Google OAuth configuration
# Obtenha suas credenciais em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Use sempre um IP (e não "localhost") para o redirect local
GOOGLE_REDIRECT_URI=http://127.0.0.1:8080/api/slides/oauth/callback

# Infra geral
PORT=5173
NODE_ENV=development

# Google Slides / Drive

GOOGLE_TEMPLATE_ODIN_ID=
GOOGLE_TEMPLATE_OD_VT_ID=
GOOGLE_TEMPLATE_OD_DROP_ID=
GOOGLE_TEMPLATE_OD_PACK_ID=
GOOGLE_TEMPLATE_OD_FULL_ID=
# (Opcional) fallback gerais enquanto os IDs acima não estiverem preenchidos
GOOGLE_TEMPLATE_EXTERNOS_ID=
GOOGLE_TEMPLATE_COMBO_ID=
GOOGLE_PRESENTATIONS_FOLDER_ID=folder_id_to_store_generated_presentations
GOOGLE_DRIVE_ASSETS_FOLDER_ID=folder_id_for_uploaded_images
GOOGLE_SHARE_PRESENTATIONS=true

# Configurações do Aplicativo
APP_NAME=OD Drive - Gerador de Orçamentos
APP_VERSION=1.0.0

# Paths locais
STORAGE_PATH=./data/proposals
EXPORTS_PATH=./tmp/exports
UPLOADS_PATH=./tmp/uploads
